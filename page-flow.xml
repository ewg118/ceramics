<config xmlns="http://www.orbeon.com/oxf/controller" xmlns:oxf="http://www.orbeon.com/oxf/processors" matcher="oxf:perl5-matcher">

	<!-- ****************
	* ADMIN INTERFACE *
	***************** -->
	<page path="/kerameikos/admin/edit/" view="xforms/edit.xhtml"/>
	<page path="/kerameikos/admin/invite/" view="xforms/invite.xhtml"/>
	<page path="/kerameikos/admin/manage/" view="xforms/manage.xhtml"/>
	<page path="/kerameikos/admin/" view="xforms/admin.xhtml"/>
	
	<!-- authentication -->
	<page path="/kerameikos/signup" view="xforms/signup.xhtml"/>
	<page path="/kerameikos/login" view="xforms/login.html"/>
	<page path="/kerameikos/login-failed" view="xforms/login-failed.html"/>
	<page path="/kerameikos/admin/logout">
		<action action="xpl/xforms/logout.xpl">
			<result page="index"/>
		</action>
	</page>
	
	
	<!-- ****************
	* PUBLIC INTERFACE *
	***************** -->

	<!-- **** SERIALIZATIONS **** -->
	<!-- RDF -->
	<page path="/kerameikos/id/(.*)\.rdf" view="xpl/models/get-id.xpl"/>	
	<page path="/kerameikos/id/(.*)\.kml" model="xpl/models/get-id.xpl" view="xpl/views/serializations/rdf/kml.xpl"/>
	<page path="/kerameikos/id/(.*)\.ttl" model="xpl/models/get-id.xpl" view="xpl/views/serializations/rdf/ttl.xpl"/>	
	<page path="/kerameikos/id/(.*)\.html" model="xpl/models/get-id.xpl" view="xpl/views/serializations/rdf/html.xpl"/>
	<page path="/kerameikos/id/(.*)\.jsonld" model="xpl/models/get-id.xpl" view="xpl/views/serializations/rdf/json-ld.xpl"/>
	
	<!-- ONTOLOGY -->
	<page path="/kerameikos/ontology" model="xpl/models/get-ontology.xpl" view="xpl/views/pages/ontology.xpl"/>
	<page path="/kerameikos/ontology.rdf" view="xpl/models/get-ontology.xpl"/>
	<page path="/kerameikos/ontology.ttl" model="xpl/models/get-ontology.xpl" view="xpl/views/serializations/rdf/ttl.xpl"/>
	
	<!-- Solr -->
	<page path="/kerameikos/id/" model="xpl/models/solr-query.xpl" view="xpl/controllers/conneg-results.xpl"/>	
	<page path="/kerameikos/feed/" model="xpl/models/solr-query.xpl" view="xpl/views/serializations/solr/atom.xpl"/>
	
	<!-- SPARQL wrapper (URL generator) -->
	<page path="/kerameikos/query" view="xpl/controllers/conneg-sparql.xpl"/>
	
	<!-- **** PAGES **** -->
	<page path="/kerameikos/apis" view="xpl/views/pages/apis.xpl"/>
	<page path="/kerameikos/sparql" view="xpl/views/pages/sparql.xpl"/>
	<page path="/kerameikos/" view="xpl/views/pages/index.xpl"/>
	
	<!-- **** APIs **** -->
	<page path="/kerameikos/api/get" model="xpl/models/get-id.xpl" view="xpl/views/apis/get.xpl"/>
	<page path="/kerameikos/api/getRdf" model="xpl/models/aggregate-ids.xpl" view="xpl/views/apis/getRdf.xpl"/>
	
	<!-- **** DATA DUMPS **** -->
	<page path="/kerameikos/kerameikos.org.xml" view="dump/kerameikos.org.xml"/>
	
	<!-- 303 redirect -->
	<page path="/kerameikos/id/(.*)" model="xpl/models/get-id.xpl" view="xpl/controllers/conneg-id.xpl"/>

	<epilogue url="oxf:/config/epilogue.xpl"/>
</config>
