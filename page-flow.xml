<config xmlns="http://www.orbeon.com/oxf/controller" xmlns:oxf="http://www.orbeon.com/oxf/processors">

	<!-- ****************
	* ADMIN INTERFACE *
	***************** -->
	<page path="/ceramics/admin/edit/" view="xforms/edit.xhtml"/>
	
	<!-- ****************
	* PUBLIC INTERFACE *
	***************** -->

	<!-- RDF direct output -->
	<page path="/ceramics/id/(.*)\.rdf" matcher="oxf:perl5-matcher" view="xpl/get-id.xpl"/>	
	<!-- Object KML -->
	<page path="/ceramics/id/(.*)\.kml" matcher="oxf:perl5-matcher" model="xpl/get-id.xpl" view="xpl/object-to-kml.xpl"/>	
	<!-- solr doc service -->
	<page path="/ceramics/id/(.*)\.solr" matcher="oxf:perl5-matcher" model="xpl/get-id.xpl" view="xpl/object-to-solr.xpl"/>	
	<!-- public html view -->
	<page path="/ceramics/id/(.*)" matcher="oxf:perl5-matcher" model="xpl/get-id.xpl" view="xpl/display.xpl"/>

	<!-- Atom feed -->
	<page path="/ceramics/feed/" model="xpl/solr-feed.xpl" view="xpl/feed.xpl"/>
	
	<!-- index -->
	<page path="/ceramics/" view="xpl/index.xpl"/>

	<epilogue url="oxf:/config/epilogue.xpl"/>
</config>
