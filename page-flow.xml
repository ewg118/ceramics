<config xmlns="http://www.orbeon.com/oxf/controller" xmlns:oxf="http://www.orbeon.com/oxf/processors">

	<!-- ****************
	* ADMIN INTERFACE *
	***************** -->
	<page path="/ceramics/admin/edit/" view="xforms/edit.xhtml"/>
	
	<!-- ****************
	* PUBLIC INTERFACE *
	***************** -->

	<!-- **** SERIALIZATION **** -->
	<!-- RDF direct output -->
	<page path="/ceramics/id/(.*)\.rdf" matcher="oxf:perl5-matcher" view="xpl/get-id.xpl"/>	
	<!-- Object KML -->
	<page path="/ceramics/id/(.*)\.kml" matcher="oxf:perl5-matcher" model="xpl/get-id.xpl" view="xpl/id-to-kml.xpl"/>	
	<!-- public html view -->
	<page path="/ceramics/id/(.*)\.html" matcher="oxf:perl5-matcher" model="xpl/get-id.xpl" view="xpl/display.xpl"/>

	<!-- Atom feed -->
	<page path="/ceramics/feed/" model="xpl/solr-query.xpl" view="xpl/feed.xpl"/>
	
	<!-- SPARQL wrapper (URL generator) -->
	<page path="/ceramics/query" view="xpl/sparql-query.xpl"/>
	
	<!-- **** PAGES **** -->
	<page path="/ceramics/id/" model="xpl/solr-query.xpl" view="xpl/results.xpl"/>
	<page path="/ceramics/sparql/" view="xpl/sparql.xpl"/>
	<page path="/ceramics/" view="xpl/index.xpl"/>
	
	<!-- **** DATA DUMPS **** -->
	<page path="/ceramics/kerameikos.org.xml" view="dump/kerameikos.org.xml"/>
	
	<!-- 303 redirect from official URI to .html -->
	<page path="/ceramics/id/(.*)" matcher="oxf:perl5-matcher" model="xpl/303-redirect.xpl"/>

	<epilogue url="oxf:/config/epilogue.xpl"/>
</config>
